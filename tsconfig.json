{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "noEmit": true,
    "allowJs": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "."
  },
  "exclude": ["node_modules", "dist"]
}
